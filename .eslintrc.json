{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    },
    "react/no-unescaped-entities": ["error", {"forbid": [">", "}", "'"]}],
    "react/jsx-pascal-case": [
        "off",
        {
          "allowAllCaps": true,
          "allowNamespace": true,
          "allowLeadingUnderscore": true,
          "ignore": []
        }
      ]
    

}
